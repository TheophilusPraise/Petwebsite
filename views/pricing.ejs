    <script src="https://remitademo.net/payment/v1/remita-pay-inline.bundle.js"></script>
    <script>
      function makeRemitaPayment(plan, price, userEmail, userName) {
        var paymentEngine = RmPaymentEngine.init({
          key: 'YOUR_PUBLIC_KEY', // Replace with your Remita public key
          transactionId: 'PETCARE-' + Date.now(), // Unique reference
          customerId: userEmail,
          firstName: userName || 'PetCare User',
          lastName: '',
          email: userEmail,
          amount: price,
          narration: 'PetCare ' + plan + ' Plan Subscription',
          onSuccess: function (response) {
            alert('Payment successful! Reference: ' + response.transactionId);
            // Optionally, send AJAX to your backend to save payment record
          },
          onError: function (response) {
            alert('Payment failed: ' + response.message);
          },
          onClose: function () {}
        });
        paymentEngine.showPaymentWidget();
      }
    </script>
